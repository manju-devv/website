{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "nuxt3"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "node_modules/@nuxt/types/**/*.d.ts"
  ]
}
